<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvLabelLang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <!-- Entry type: TEXT -->
    <ViewStub
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vsText"
        android:inflatedId="@+id/vsTextAfter"
        android:layout="@layout/item_entry_text"/>

    <!-- Entry type: PICTURE -->
    <ViewStub
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vsPic"
        android:inflatedId="@+id/vsPicAfter"
        android:layout="@layout/item_entry_pic"/>

    <!-- Entry type: others (AUDIO / VIDEO) -->
    <ViewStub
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vsMedia"
        android:inflatedId="@+id/vsMediaAfter"
        android:layout="@layout/item_entry_media"/>

</LinearLayout>