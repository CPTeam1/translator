<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.SignupActivity">

    <Button
        android:id="@+id/btSignup"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:text="Create Account" />

    <EditText
        android:id="@+id/etConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/btSignup"
        android:layout_alignRight="@id/btSignup"
        android:layout_alignEnd="@id/btSignup"
        android:layout_alignLeft="@id/btSignup"
        android:layout_alignStart="@id/btSignup"
        android:hint="Confirm Password"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/etConfirm"
        android:layout_alignRight="@id/btSignup"
        android:layout_alignEnd="@id/btSignup"
        android:layout_alignLeft="@id/btSignup"
        android:layout_alignStart="@id/btSignup"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/etPassword"
        android:layout_alignRight="@id/btSignup"
        android:layout_alignEnd="@id/btSignup"
        android:layout_alignLeft="@id/btSignup"
        android:layout_alignStart="@id/btSignup"
        android:hint="Email"/>
</RelativeLayout>
