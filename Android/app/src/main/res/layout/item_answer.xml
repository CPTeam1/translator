<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llAnswerContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_qs_container"
    android:orientation="vertical"
    android:padding="@dimen/custom_qs_margin"
    android:paddingBottom="@dimen/custom_qs_margin"
    android:paddingLeft="@dimen/custom_qs_margin"
    android:paddingRight="@dimen/custom_qs_margin"
    android:paddingTop="@dimen/custom_qs_margin">

    <!-- who answered -->
    <include
        android:id="@+id/includeAnsweredBy"
        layout="@layout/item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp" />

    <!-- Answer -->
    <include
        android:id="@+id/includeAs"
        layout="@layout/item_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" />

    <!-- Answer created time -->
    <include
        android:id="@+id/includeTimeAnswered"
        layout="@layout/item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />

</LinearLayout>